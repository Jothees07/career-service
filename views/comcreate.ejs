                <input type="Username" class="form-control" id="floatingInput" name="channelName" placeholder="Channel Name" required> 
                <label for="floatingInput">Channel Name</label>
            </div>
            <div class="form-floating">
                <textarea class="form-control" name="description" placeholder="Channel description" id="floatingTextarea2" style="height: 100px" required></textarea>
                <label for="floatingTextarea2">Channel description</label>
            </div>
            <br>
            <button type="submit" class="btn btn-outline-secondary btn-lg">Submit</button>
